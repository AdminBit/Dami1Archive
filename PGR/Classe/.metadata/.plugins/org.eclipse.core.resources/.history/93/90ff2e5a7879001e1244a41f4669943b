package ud4;

import java.util.Scanner;

public class PersonasMain {

	public static void main(String[] args) {

		Persona personas[] = new Persona[10];
		Scanner sc = new Scanner(System.in);
		boolean salir = false;

		String name;
		String dni;
		int age;

		int opcion;

		do {
			System.out.println("1.Introducir las personas.");
			System.out.println("2. Muestra la persona de mayor edad.");
			System.out.println("3. Muestra la informaci贸n de una persona tras introducir su DNI");
			System.out.println("4. Muestra la informaci贸n de todas las personas.");
			System.out.println("5. Salir");
			System.out.println("Que quieres hacer ? ");
			opcion = sc.nextInt();

			switch (opcion) {
			case 1:
				// Introducir las personas
				for (int i = 0; i < personas.length; i++) {
					personas[i] = new Persona();
					System.out.println("El nombre");
					name = sc.next();
					System.out.println("El DNI");
					dni = sc.next();
					System.out.println("El edad");
					age = sc.nextInt();

					personas[i].setNombre(name);
					personas[i].setDNI(dni);
					personas[i].setEdad(age);

				}
				break;
			case 2:
				// Muestra la persona de mayor edad.
				for (int i = 0; i < personas.length; i++) {
					if (personas[i].esMayorDeEdad()) {
						personas[i].mostart();
					}
				}
				break;
			case 3:
				// 3. Muestra la informaci贸n de una persona tras introducir su DNI.
				System.out.println("El DNI");
				dni = sc.next();
				int i = 0;
				boolean notFound = true;
				while (notFound && i < personas.length) {
					if (dni.equalsIgnoreCase(personas[i].getDNI())) {
						notFound = true;
						personas[i].mostart();
					}
					i++;
				}
				if (notFound) {
					System.out.println("este persona no existe");
				}
				break;
			case 4:
				// Muestra la informaci贸n de todas las persona
				for (int j = 0; j < personas.length; j++) {
					personas[j].mostrar();
				}
				break;
			case 5:
				//
				System.out.println("Hasta pronto ...");
				salir = true;
				break;
			default:
				//
				System.out.println("Opcion no Existe");
				break;
			}

		} while (!salir);

		sc.close();
	}// main

	// llenar el array
	public void llenar() {

	}

}
