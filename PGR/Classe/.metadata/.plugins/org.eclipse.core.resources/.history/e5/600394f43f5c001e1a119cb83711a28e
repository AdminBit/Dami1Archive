package ud1;

import java.util.Scanner;

public class EjerciciosBucle01 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		
		int nFact;
		int numeroDigi;
		double nota1,nota2,nota3;
		
		System.out.println("**********Ejercicio 01 *******");

		int i=5; 
		
		while(i<15)	{
		System.out.println(i);
		i++;
		}
		System.out.println("**********Ejercicio 02 *******");
		
		for(int j=200;j<=300 ;j++) {
			System.out.println(j);
		}
		
		System.out.println("**********Ejercicio 03 *******");

	
		int n=0;
		for(int k=0;k<=1000 ;k++) {
			
			if(k%2==0) {
				System.out.println(k);
				n=n+1;
				if(n==5) {
					break;
				}
			}
		}
		System.out.println("**********Ejercicio 04 *******");
		// factorial
		
		
		System.out.println("Introduce un Numero ");
		nFact=sc.nextInt();
		int fact=1;
		for(int z=nFact;z>1; z-- ) {
			fact=z*fact;
		}
		System.out.println("factorial de "  +nFact + " es : " + fact);

		
		
		System.out.println("**********Ejercicio 05 *******");
		
		
		System.out.println("Introduce un Numero entero ");
			numeroDigi=sc.nextInt();
			int count =1; 
				while(numeroDigi>10) {
					numeroDigi=numeroDigi/10;
					count++;
				}
		System.out.println("Introduce un Numero entero "+ numeroDigi + "  " + count +" digitos");

				
		System.out.println("**********Ejercicio 06 *******");

		do {
			System.out.println("Introduce la nota de asignatura 1 ");
			nota1=sc.nextDouble();
			}while(nota1 >10 || nota1 <0);
				
			
		do {
			System.out.println("Introduce la nota de asignatura 2");
			nota2=sc.nextDouble();
			}while(nota2 >10 || nota2 <0);
					
		
		do {
			System.out.println("Introduce la nota de asignatura 3");
			nota3=sc.nextDouble();
			}while(nota3 >10 || nota3 <0);
					
		System.out.println("la nota media : " + (nota1 + nota2+nota3)/3);

		
				
				
				
				
				
			sc.close();	
				
		}

}
