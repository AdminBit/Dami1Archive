package ud3;

import java.util.Scanner;

public class ArrayEx5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int temperatura[]= new int[7];
		int sumaTemperatura=0;
		double media;
		Scanner sc = new Scanner(System.in);
//		La temperatura de los días de la semana leerla en .
//		Habrá que calcular y mostrar lo siguiente:
//		- La media de la semana en ºF
//		- El día más caluroso y más frio
//		- Los días por encima de la media.
//		- Los días por debajo de la media.
	
		
		
		// la media 
		for (int i =0;i<temperatura.length ;i++) {
			System.out.println("La temperatura del dia en ºC "+ (i+1));
			temperatura[i]=sc.nextInt();
		}
		
		for (int i =0;i<temperatura.length ;i++) {
			sumaTemperatura=sumaTemperatura+temperatura[i];
		}
		media=sumaTemperatura/temperatura.length;
		System.out.println("La temperatura media de este semana es "+media);
		
	}// main

}
