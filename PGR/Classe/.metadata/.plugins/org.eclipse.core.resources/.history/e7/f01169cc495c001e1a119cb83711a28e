package ud1;

import java.util.Scanner;

public class EdeEj5 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		
//		. Escribe un programa en el que se introducirán 2 nº enteros y distintos
//		(límite inferior y superior). Si el límite inferior
//		es mayor que el superior le daremos un mensaje al usuario pero no le pediremos
//		volver a introducir (los
//		cambiaremos nosotros por programa). 
		Scanner sc =new Scanner(System.in);

		int limitInfer=0,limiteSuper;
		do {
			System.out.println("EL limite Inferiro : ");
			limitInfer=sc.nextInt();
			
			System.out.println("EL limite Inferiro : ");
			limiteSuper=sc.nextInt();
				
			}
			while(limiteSuper < limitInfer );
			
		int codeSecreto ; 
		int oportunidades;
		int myGuess;
		codeSecreto = (int) ((Math.random() * (limiteSuper - limitInfer)) + limitInfer);
		System.out.println(codeSecreto);
		if((limiteSuper - limitInfer) <= 10) {
			oportunidades=3;
			System.out.println(" just lock this is my rang" + codeSecreto + " tengo " + oportunidades +" oportunidades");
			System.out.println("Guess the number");
			myGuess=sc.nextInt();
			while(myGuess != codeSecreto && oportunidades >0 ) {
				if(myGuess>codeSecreto) {
					System.out.println("el codeSecreto es MENOR");
				}else if(myGuess<codeSecreto) {
					System.out.println("el codeSecreto es MAYOR");
				}	
				oportunidades--;10
				
			}
			
				
		}
		
		
		
		
	}

}
