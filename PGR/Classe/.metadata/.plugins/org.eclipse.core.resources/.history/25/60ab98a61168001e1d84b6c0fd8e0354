package ud3;

import java.util.Scanner;

public class Ej6 {

	public static void main(String[] args) {
		//. Realiza la clase Java Medianum que pide números por pantalla y los almacena 
		//en un array hasta que se introduzca
		//un número negativo que no será tenido en cuenta o el array esté lleno.
		//Después calcula la Media y la muestra.

		int n= 10;
		int numero;
		double media=0.0;
		int[] b= new int[n];
		
		int i=0;
		Scanner sc = new Scanner (System.in);
		
		System.out.println("Introduzca un numero positivo :");
		numero= sc.nextInt();

		while( numero >=0 && i<b.length-1) {

			b[i]=numero;
			i++;
			media=media+b[i];
			System.out.println("Introduzca un numero positivo :");
			numero= sc.nextInt();
		
			
			
		}
		media=media/i;
	
		/*for(int j=0;j<i ;j++) {
			sum=b[j]+sum;
			
		}
		*/
		System.out.println(media);
		
		
		sc.close();
	}

}
